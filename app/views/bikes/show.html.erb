<div class="text-center"> <h1> <%= @bike.gender %> <%= @bike.category %> bike </h1> </div>

<%= link_to "Rent this bike", new_bike_booking_path(@bike) %>

<% if @bike.photo? %>
  <%= cl_image_tag @bike.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var coord = { lat: <%= @bike_coordinates[:lat] %>, lng: <%= @bike_coordinates[:lng] %>};
      alert('bike coordinates are ' + coord.lat + ', ' + coord.lng);
    });
  <% end %>
<% end %>
